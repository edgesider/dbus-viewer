{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "downlevelIteration": true,
    "lib": [
      "DOM",
      "ES6"
    ],
    "types": [
      "vuetify"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}